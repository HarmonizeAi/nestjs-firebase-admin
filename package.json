{
  "name": "@harmonizeai/nestjs-firebase-admin",
  "version": "8.4.0",
  "description": "Firebase Admin module for Nest framework (forked from Aginix/nestjs-firebase-admin)",
  "authors": [
    {
      "name": "Nonpawit Teerachetmongkol",
      "email": "nonpawit.tee@aginix.tech"
    },
    {
      "name": "Michael Musso",
      "email": "mmusso@smth.it"
    },
    {
      "name": "Michael Charkin",
      "email": "michael@harmonize.ai"
    }
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarmonizeAi/nestjs-firebase-admin"
  },
  "scripts": {
    "test": "jest",
    "test:dev": "jest --watch",
    "prettier": "prettier src/**/*.ts --write && git status",
    "clean": "rimraf dist",
    "build": "rimraf dist && npm run build:lib && npm test",
    "build:lib": "tsc -p tsconfig.json",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepare": "husky install",
    "check:all": "lint-staged && npm run test && npm audit"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0"
  },
  "dependencies": {
    "firebase-admin": "^11.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/jest": "^28.1.4",
    "@types/node": "16.0.0",
    "dotenv": "^16.0.1",
    "husky": "8.0.1",
    "jest": "28.1.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "supertest": "6.2.4",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}
